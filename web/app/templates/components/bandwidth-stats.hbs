<div class="pure-g-r">
    <div class="pure-u-1-3">
        <h3>Bandwidth</h3>
        <div class="meta">
            <p>mean written bytes</p>
            <div class="color-indicator">
                <span class="d3-col block-0"></span>
                <span class="label">{{to-bandwidth readHistoryAvg}}</span>
            </div>
        </div>
        <div class="meta">
            <p>mean read bytes</p>
            <div class="color-indicator">
                <span class="d3-col block-1"></span>
                <span class="label">{{to-bandwidth writeHistoryAvg}}</span>
            </div>
        </div>
    </div>
    <div class="pure-u-2-3">
        {{ view 'combined-bandwidth-graph'
            period=period
            data=data
            timePeriods=timePeriods
        }}
    </div>
</div>