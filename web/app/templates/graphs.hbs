<div class="titlebar">
    <div class="pure-g">
        <div class="pure-u-1-2">
            <h2>Graphs</h2>
        </div>
        <div class="pure-u-1-2 align-right">
            <div class="tabs">
                <div class="tab">
                    <p>3 days</p>
                </div>
                <div class="tab active">
                    <p>1 week</p>
                </div>
                <div class="tab">
                    <p>3 weeks</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="graph-stats-container">
    <div class="pure-g">
        <div class="pure-u-1-2">
            {{uptime-stats
            data=controller.uptimeData
            timePeriods=controller.uptimePeriods
            period='1_week'
            }}

        </div>
        <div class="pure-u-1-2">
            {{bandwidth-stats
            data=controller.bandwidthData
            timePeriods=controller.bandwidthPeriods
            period='1_week'
            }}

        </div>
        <div class="pure-u-1-2">
            {{weight-stats
            data=controller.weightData
            timePeriods=controller.weightPeriods
            period='1_week'
            }}
        </div>
        <div class="pure-u-1-2">
            {{clients-stats
            data=controller.clientsData
            timePeriods=controller.clientsPeriods
            period='1_week'
            }}
        </div>
    </div>
</div>

{{#if showParticipants}}
    <h2>Available fingerprints:</h2>
    {{collection
    itemView='fingerprint-item'
    content=this
    classNames='select-list'
    }}
{{/if}}