<div class="titlebar">
    <div class="wrapper">
        <div class="pure-g">
            <div class="pure-u-1-3">
                <h2>Graphs</h2>
            </div>
            <div class="pure-u-2-3 align-right">

                <div class="tabs">
                    {{#each periods}}
                        {{tab-item
                            active=active
                            title=title
                            key=key
                            tabActivated='tabActivated'
                        }}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="graph-stats-container">
        <div class="pure-g">
            <div class="pure-u-1-2">
                {{uptime-stats
                    data=controller.uptimeData
                    timePeriods=controller.uptimePeriods
                    period=selectedPeriod
                }}

            </div>
            <div class="pure-u-1-2">
                {{bandwidth-stats
                    data=controller.bandwidthData
                    timePeriods=controller.bandwidthPeriods
                    period=selectedPeriod
                }}

            </div>
            <div class="pure-u-1-2">
                {{weight-stats
                    data=controller.weightData
                    timePeriods=controller.weightPeriods
                    period=selectedPeriod
                }}
            </div>
            <div class="pure-u-1-2">
                {{clients-stats
                    data=controller.clientsData
                    timePeriods=controller.clientsPeriods
                    period=selectedPeriod
                }}
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="participants">
        <div class="content-head">
            <h2>Participants</h2>
        </div>
        {{collection
            itemView='fingerprint-item'
            content=ENV.PARTICIPANTS
            classNames='pure-g-r fingerprint-list'
        }}
    </div>
</div>