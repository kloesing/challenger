<div class="titlebar">
    <div class="wrapper">
        <div class="pure-g">
            <div class="pure-u-1-3">
                <h2>Graphs</h2>
            </div>
            <div class="pure-u-2-3 align-right">

                <div class="tabs">
                    {{#each periods}}
                        {{tab-item
                            active=active
                            title=title
                            key=key
                            tabActivated='tabActivated'
                        }}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="graph-stats-container">
        <div class="pure-g">
            <div class="pure-u-1-2">
                {{uptime-stats
                    data=uptimeData
                    timePeriods=uptimePeriods
                    period=selectedPeriod
                }}

            </div>
            <div class="pure-u-1-2">
                {{bandwidth-stats
                    data=bandwidthData
                    timePeriods=bandwidthPeriods
                    period=selectedPeriod
                }}

            </div>
            <div class="pure-u-1-2">
                {{weight-stats
                    data=weightData
                    timePeriods=weightPeriods
                    period=selectedPeriod
                }}
            </div>
            <div class="pure-u-1-2">
                {{clients-stats
                    data=clientsData
                    timePeriods=clientsPeriods
                    period=selectedPeriod
                }}
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="participants">
        <div class="content-head">
            <h2 class="pointer" {{action 'toggleShowParticipants'}}>
                {{controllers.application.participants.length}} Participants
                <span>
                    <i {{bind-attr class=':fa showParticipants:fa-angle-up:fa-angle-down'}}></i>
                </span>
            </h2>
        </div>
        {{#if showParticipants}}
            {{collection
                itemView='fingerprint-item'
                content=controllers.application.participants
                classNames='pure-g-r fingerprint-list'
            }}
        {{/if}}
    </div>
</div>