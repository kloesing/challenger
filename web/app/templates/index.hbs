<div class="pure-g">
    <div class="pure-u-1-3">
        <strong>Show graphs for:</strong>
    </div>
    <div class="pure-u-2-3">
        {{#link-to 'graphs' 'all'}}
            all participants ({{length}})
        {{/link-to}}
        &nbsp;
        {{#if selectedItems.length}}
            {{#link-to 'graphs' graphsUrlPayload}}
                custom selection ({{selectedItems.length}} / {{length}})
            {{/link-to}}
        {{else}}
            <span>custom selection ({{selectedItems.length}} / {{length}})</span>
        {{/if}}
        &nbsp;
        <button {{action 'show-fingerprints'}}>
            <i {{bind-attr class=':fa showFingerprints:fa-angle-up:fa-angle-down'}}></i>
            select
        </button>
    </div>
</div>

{{#if showFingerprints}}
    <h2>Available fingerprints:</h2>
    {{collection
        itemView='fingerprint-item'
        content=this
        classNames='select-list'
    }}
{{/if}}